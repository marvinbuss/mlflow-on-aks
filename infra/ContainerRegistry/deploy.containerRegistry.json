{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Specifies the location for all resources."
            }
        },
        "containerRegistryName": {
            "type": "string",
            "metadata": {
                "description": "Specifies the name of the container registry."
            }
        },
        "subnetId": {
            "type": "string",
            "metadata": {
                "description": "Specifies the id of the subnet which the private endpoint uses."
            }
        },
        "privateDnsZoneId": {
            "type": "string",
            "metadata": {
                "description": "Specifies the resource id of the private DNS zone that should be used for the private endpoint."
            }
        }
    },
    "functions": [],
    "variables": {
        "location": "[parameters('location')]",
        "containerRegistryName": "[parameters('containerRegistryName')]",
        "subnetId": "[parameters('subnetId')]",
        "privateDnsZoneId": "[parameters('privateDnsZoneId')]"
    },
    "resources": [
        {
            "name": "[variables('containerRegistryName')]",
            "type": "Microsoft.ContainerRegistry/registries",
            "apiVersion": "2019-12-01-preview",
            "location": "[variables('location')]",
            "sku": {
                "name": "Premium"
            },
            "properties": {
                "adminUserEnabled": true,
                "networkRuleSet": {
                    "defaultAction": "Deny",
                    "ipRules": [],
                    "virtualNetworkRules": []
                },
                "policies": {
                    "quarantinePolicy": {
                        "status": "disabled"
                    },
                    "retentionPolicy": {
                        "days": 0,
                        "status": "disabled"
                    },
                    "trustPolicy": {
                        "status": "disabled"
                    }
                },
                "dataEndpointEnabled": false,
                "encryption": {
                    "keyVaultProperties": {
                        "identity": "",
                        "keyIdentifier": ""
                    },
                    "status": "disabled"
                },
                "publicNetworkAccess": "Enabled"
            }
        },
        {
            "name": "[concat(variables('containerRegistryName'), '-private-endpoint')]",
            "type": "Microsoft.Network/privateEndpoints",
            "apiVersion": "2020-05-01",
            "dependsOn": [
                "[resourceId('Microsoft.ContainerRegistry/registries', variables('containerRegistryName'))]"
            ],
            "location": "[variables('location')]",
            "properties": {
                "privateLinkServiceConnections": [
                    {
                        "name": "[concat(variables('containerRegistryName'), '-private-endpoint')]",
                        "properties": {
                            "privateLinkServiceId": "[resourceId('Microsoft.ContainerRegistry/registries', variables('containerRegistryName'))]",
                            "groupIds": [
                                "registry"
                            ]
                        }
                    }
                ],
                "manualPrivateLinkServiceConnections": [
                ],
                "subnet": {
                    "id": "[variables('subnetId')]"
                }
            }
        },
        {
            "condition": "[not(empty(variables('privateDnsZoneId')))]",
            "name": "[concat(variables('containerRegistryName'), '-private-endpoint', '/aRecord')]",
            "type": "Microsoft.Network/privateEndpoints/privateDnsZoneGroups",
            "apiVersion": "2020-05-01",
            "dependsOn": [
                "[resourceId('Microsoft.Network/privateEndpoints', concat(variables('containerRegistryName'), '-private-endpoint'))]"
            ],
            "location": "[variables('location')]",
            "properties": {
                "privateDnsZoneConfigs": [
                    {
                        "name": "[concat(variables('containerRegistryName'), '-private-endpoint', '-aRecord')]",
                        "properties": {
                            "privateDnsZoneId": "[variables('privateDnsZoneId')]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {}
}