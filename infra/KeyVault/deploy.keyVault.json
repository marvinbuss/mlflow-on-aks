{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Specifies the location for all resources."
            }
        },
        "keyVaultName": {
            "type": "string",
            "metadata": {
                "description": "Specifies the name of the key vault."
            }
        },
        "subnetId": {
            "type": "string",
            "metadata": {
                "description": "Specifies the id of the subnet which the private endpoint uses."
            }
        },
        "privateDnsZoneId": {
            "type": "string",
            "metadata": {
                "description": "Specifies the resource id of the private DNS zone that should be used for the private endpoint."
            }
        }
    },
    "functions": [],
    "variables": {
        "location": "[parameters('location')]",
        "keyVaultName": "[parameters('keyVaultName')]",
        "subnetId": "[parameters('subnetId')]",
        "privateDnsZoneId": "[parameters('privateDnsZoneId')]"
    },
    "resources": [
        {
            "name": "[variables('keyVaultName')]",
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2019-09-01",
            "location": "[variables('location')]",
            "properties": {
                "enabledForDeployment": false,
                "enabledForTemplateDeployment": true,
                "enabledForDiskEncryption": false,
                "enablePurgeProtection": true,
                "enableSoftDelete": true,
                "enableRbacAuthorization": false,
                "tenantId": "[subscription().tenantId]",
                "createMode": "default",
                "accessPolicies": [
                ],
                "sku": {
                    "name": "standard",
                    "family": "A"
                },
                "networkAcls": {
                    "bypass": "AzureServices",
                    "defaultAction": "Deny",
                    "ipRules": [
                    ],
                    "virtualNetworkRules": [
                    ]
                }
            }
        },
        {
            "name": "[concat(variables('keyVaultName'), '-private-endpoint')]",
            "type": "Microsoft.Network/privateEndpoints",
            "apiVersion": "2020-05-01",
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"
            ],
            "location": "[variables('location')]",
            "properties": {
                "privateLinkServiceConnections": [
                    {
                        "name": "[concat(variables('keyVaultName'), '-private-endpoint')]",
                        "properties": {
                            "privateLinkServiceId": "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]",
                            "groupIds": [
                                "vault"
                            ]
                        }
                    }
                ],
                "manualPrivateLinkServiceConnections": [
                ],
                "subnet": {
                    "id": "[variables('subnetId')]"
                }
            }
        },
        {
            "condition": "[not(empty(variables('privateDnsZoneId')))]",
            "name": "[concat(variables('keyVaultName'), '-private-endpoint', '/aRecord')]",
            "type": "Microsoft.Network/privateEndpoints/privateDnsZoneGroups",
            "apiVersion": "2020-05-01",
            "dependsOn": [
                "[resourceId('Microsoft.Network/privateEndpoints', concat(variables('keyVaultName'), '-private-endpoint'))]"
            ],
            "location": "[variables('location')]",
            "properties": {
                "privateDnsZoneConfigs": [
                    {
                        "name": "[concat(variables('keyVaultName'), '-private-endpoint', '-aRecord')]",
                        "properties": {
                            "privateDnsZoneId": "[variables('privateDnsZoneId')]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {}
}